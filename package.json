    "moduleFileExtensions": [
      "js",
      "mjs",
      "cjs",
      "json"
    ],
    "verbose": true
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "telegram-bot",
    "cricket",
    "prediction",
    "nodejs",
    "telegraf",
    "blockchain",
    "tron"
  ]
