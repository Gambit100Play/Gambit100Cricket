    "body-parser": "^2.2.0",
    "chalk": "^5.6.2",
    "cross-env": "^10.1.0",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "luxon": "^3.7.2",
    "node-cron": "^4.2.1",
    "node-schedule": "^2.1.1",
    "pg": "^8.11.5",
    "telegraf": "^4.15.0",
    "telegraf-session-local": "^2.1.1",
    "telegraf-test": "^1.2.1",
    "tiny-secp256k1": "^2.2.4",
    "tronweb": "^6.0.4"
  },
  "devDependencies": {
    "eslint": "^9.10.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
